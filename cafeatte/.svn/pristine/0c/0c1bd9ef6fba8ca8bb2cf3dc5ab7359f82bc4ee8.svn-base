.dataRow:hover {
	background: #eee;
	cursor: pointer;
}
</style>
<script type="text/javascript">
	$(document)
			.ready(
					function() {
						$(".dataRow")
								.click(
										function() {
											no = $(this).find(".no").val();
											location = "view.do?no="
													+ no
													+ "&cnt=1&page=${pageObject.page}&perPage=${pageObject.perPageNum}";
										});
					});
</script>
